{
  "name": "@liveblocks/devtools",
  "version": "0.18.4",
  "private": true,
  "displayName": "Liveblocks",
  "description": "A browser extension that lets you inspect Liveblocks clients.",
  "homepage": "https://liveblocks.io",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2"
  },
  "dependencies": {
    "@radix-ui/react-tabs": "^1.0.0",
    "classnames": "^2.3.2",
    "plasmo": "0.55.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "18.7.23",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/webextension-polyfill": "^0.9.1",
    "autoprefixer": "^10.4.12",
    "postcss": "^8.4.17",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.8",
    "webextension-polyfill": "^0.10.0"
  },
  "manifest": {
    "permissions": [
      "scripting"
    ],
    "host_permissions": [
      "http://localhost:*/*",
      "https://*/*",
      "file://*/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "liveblocks-devtools@liveblocks.io"
      }
    }
  }
}
